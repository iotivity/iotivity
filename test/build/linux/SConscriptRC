##
# Build script for Linux
#
##

print '\n---------------Started Building Resource Container Module for Linux---------------\n'

Import('env_linux')
import os


Import('env_linux')
import os

env_linux['CC'] = 'g++'

iotivity_root = env_linux.get('IOTIVITY_ROOT')
iotivity_lib_path = env_linux.get('IOTIVITY_LIB_PATH')
iotivity_test_root = env_linux.get('IOTIVITY_TEST_ROOT')
variant_dir = env_linux.get('VARIANT_DIR')
install_dir = env_linux.get('INSTALL_DIR')
test_src_root = iotivity_test_root + '/' + variant_dir
test = env_linux.get('TEST')
common_linux_cppflags = env_linux.get('COMMON_LINUX_CPPFLAGS')

install_targets = []
default_targets = []

iotivity_include_paths = [
    iotivity_root + '/resource/include',
    iotivity_root + '/resource/csdk/include',
    iotivity_root + '/resource/c_common',
    iotivity_root + '/resource/csdk/stack/include',
    iotivity_root + '/resource/csdk/ocsocket/include',
    iotivity_root + '/resource/csdk/ocrandom/include',
    iotivity_root + '/resource/oc_logger/include',
    iotivity_root + '/extlibs/cereal/include',
    iotivity_root + '/extlibs/timer',
    iotivity_root + '/extlibs/timer/',
    iotivity_root + '/resource/c_common/oic_string/include',
    iotivity_root + '/resource/csdk/logger/include',
    iotivity_root + '/resource/csdk/logger/include/experimental',
    iotivity_root + '/extlibs/tinycbor/tinycbor/src',
    iotivity_root + '/resource/csdk/security/include',
    iotivity_root + '/service/resource-container/bundle-api/include',
    iotivity_root + '/service/resource-container/src',
    iotivity_root + '/service/resource-container/include/',
    iotivity_root + '/service/resource-encapsulation/include/',
    iotivity_lib_path + '/resource/c_common'
]

tc_include_paths = [
    iotivity_test_root + '/include',
    test_src_root + '/tc/rc/gtest/include',
    iotivity_test_root + '/extlibs/gtest-1.7.0/include'
]

tc_src = [
    Glob(test_src_root + '/tc/rc/gtest/src/btc/*.cpp'),
    Glob(test_src_root + '/tc/rc/gtest/src/stc/*.cpp'),
    Glob(test_src_root + '/tc/rc/gtest/src/helper/*.cpp')
]

testapp_include_paths = [
    iotivity_test_root + '/include',
    test_src_root + '/iBtestapp/common/include',
    test_src_root + '/iBtestapp/modules/rc/c_cpp/include'
]

testapp_src = [ 
    Glob(test_src_root + '/iBtestapp/modules/rc/c_cpp/src/*.cpp'),
    test_src_root + '/iBtestapp/common/src/IBtestappCommonUtil.cpp'
]

cppflags = Split('-s -pthread -march=native -std=gnu++0x -pthread -Wall -fpermissive')

libs = Split('connectivity_abstraction octbstack coap boost_system boost_filesystem boost_thread dl expat oc oc_logger oc_logger_core glib-2.0 uuid gcov rcs_client rcs_common rcs_container rcs_server ocsrm HueBundle rcs_container rcs_server rcs_client common_util pthread')

env_linux.ParseConfig("pkg-config --cflags --libs uuid")

default_targets += env_linux.Command('rc_hue_lib', [], Copy(test_src_root, iotivity_lib_path + '/libHueBundle.so'))
default_targets += env_linux.Command('rc_di_lib', [], Copy(test_src_root, iotivity_lib_path + '/libDISensorBundle.so'))
default_targets += env_linux.Command('rc_bmi_lib', [], Copy(test_src_root, iotivity_lib_path + '/libBMISensorBundle.so'))
default_targets += env_linux.Command('rc_container_xml', [], Copy(test_src_root, iotivity_test_root + '/res/resource_container_xml/ResourceContainerConfig.xml'))
default_targets += env_linux.Command('rc_empty_xml', [], Copy(test_src_root, iotivity_test_root + '/res/resource_container_xml/ResourceContainerEmptyConfig.xml'))
default_targets += env_linux.Command('rc_testapp_xml', [], Copy(test_src_root, iotivity_test_root + '/res/resource_container_xml/ResourceContainerConfigTestApp.xml'))

if 'tc' in test:
    rc_tc = env_linux.Program(source = tc_src, 
                target = 'iotivity_rc_test', 
                CPPPATH = iotivity_include_paths + tc_include_paths, 
                LIBS = libs + ['gtest', 'tc_util', 'pthread', 'dl'], 
                RPATH = iotivity_lib_path,
                LIBPATH = [iotivity_lib_path, iotivity_test_root + '/extlibs/gtest-1.7.0/bin/linux', '.'],
                CPPFLAGS = cppflags + common_linux_cppflags)
    install_targets += rc_tc
  
if 'app' in test:
    rc_testapp = env_linux.Program(source = testapp_src, 
                    target = 'iotivity_rc_app', 
                    CPPPATH = iotivity_include_paths + testapp_include_paths, 
                    LIBS = libs, 
                    RPATH = iotivity_lib_path,
                    LIBPATH = [iotivity_lib_path, '.'], 
                    CPPFLAGS = cppflags + common_linux_cppflags)
    install_targets += rc_testapp

install_bin = env_linux.Install(iotivity_test_root + '/' + install_dir, install_targets)

delete_bin = []
i = 0
for delete_target in install_targets:
    delete_bin.append(Command(str(i), [], Delete(delete_target)))
    i = i +1

default_targets = install_bin + delete_bin

env_linux.Default(default_targets)
