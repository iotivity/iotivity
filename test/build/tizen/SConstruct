PM_itc = env_linux.Program(source = PM_ITC_SRC, target = PM_ITC_BIN, CPPPATH = PM_CINCLUDE, LIBS = PM_LIBS, LIBPATH = PM_LIB_LOCATION, CPPFLAGS = PM_CFLAGS)

