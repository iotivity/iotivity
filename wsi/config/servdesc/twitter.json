{
    "name": "Twitter",
    "id": "com.twitter",
    "description": "API for twitter service access.",
    "platforms": [
        {
            "name": "linux",
            "appURL": "https://twitter.com"
        }
    ],
    "auth": {
        "type": "oauth2.0",
        "credentials": {
            "clientkey": "{{ck}}",
            "clientsecret": "{{cs}}",
            "tokenkey": "{{tk}}",
            "toeknsecret": "{{ts}}"
        }
    },
    "capability": [
        {
            "id": "com.twitter.tweet",
            "isauthrequired": "true",
            "description": "Post a tweet.",
            "endpoint": "https://api.twitter.com/1.1/statuses/update.json",
            "endpointtype": "REST",
            "operation": "POST",
            "params": {
                "status": "{{tweetmsg}}"
            },
            "response": {
                "error": "code",
                "body": "Maybe JSON Object."
            },
            "tags": [
                "share",
                "tweet"
            ]
        }
    ]
}
